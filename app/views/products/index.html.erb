<% if @products.present? %>
  <h1>Products List</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Url</th>
        <th>Brand Name</th>
        <th>Product Name</th>
        <th>Selling Price</th>
        <th>Actual Price</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.url %></td>
          <td><%= product.brand_name %></td>
          <td><%= product.product_name %></td>
          <td><%= product.selling_price %></td>
          <td><%= product.actual_price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3> There are no products.</h3>
<% end %>